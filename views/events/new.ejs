<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Add Event Details</h2>
                    <form class="needs-validation" action="/events" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="eventName" class="form-label">Event Name</label>
                            <input type="text" class="form-control" name="name" id="eventName" placeholder="Name of Event" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter an event name.</div>
                        </div>

                        <div class="mb-3">
                            <label for="eventImage" class="form-label">Image URL</label>
                            <input type="url" class="form-control" name="img" id="eventImage" placeholder="Image URL of Event">
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter an image URL.</div>
                        </div>

                        <div class="mb-3">
                            <label for="eventDate" class="form-label">Date</label>
                            <input type="date" class="form-control" name="date" id="eventDate" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a date.</div>
                        </div>

                        <div class="mb-3">
                            <label for="eventTime" class="form-label">Time</label>
                            <input type="time" class="form-control" name="time" id="eventTime" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a time.</div>
                        </div>

                        <div class="mb-3">
                            <label for="eventSociety" class="form-label">Society</label>
                            <select class="form-select" name="society" id="eventSociety" required>
                                <option value="">Select Society</option>
                                <% societies.forEach(society => { %>
                                    <option value="<%= society._id %>"><%= society.name %></option>
                                <% }); %>
                            </select>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please select a society.</div>
                        </div>

                        <div class="mb-3">
                            <label for="eventVenue" class="form-label">Venue</label>
                            <input type="text" class="form-control" name="venue" id="eventVenue" placeholder="Venue of Event" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a venue.</div>
                        </div>

                
                        <div class="mb-3">
                            <label for="eventType" class="form-label">Type</label>
                            <select class="form-select" name="type" id="eventType" required>
                                <option value="">Select Type</option>
                                <option value="Technical">Technical</option>
                                <option value="Hackathon">Hackathon</option>
                                <option value="Research">Research</option>
                                <option value="Coding Contest">Coding Contest</option>
                                <option value="Cultural">Cultural</option>
                                <option value="Seminar & Workshop">Seminar & Workshop</option>
                                <option value="Sports">Sports</option>
                                <option value="Games & Fun">Games & Fun</option>
                                <option value="Literature & Speaking">Literature</option>
                                <option value="Social Awareness">Social Awareness</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please select a type.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="eventDesc" class="form-label">Description</label>
                            <textarea class="form-control" name="desc" id="eventDesc" rows="5" placeholder="Description of Event"></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="registerLink" class="form-label">Registration Link</label>
                            <input type="url" class="form-control" name="registerLink" id="registerLink" placeholder="Registration Link for Event">
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a registration link.</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Add Event</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/script.js"></script>
<%- include('../partials/footer') %>
