<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<section class="container mt-5">
  <h2 class="mb-4">Edit Profile</h2>
  <div class="profile-edit-form">
    <form action="/profile/update" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
      </div>

      <div class="mb-3">
        <label for="rollno" class="form-label">Roll Number</label>
        <input type="text" class="form-control" id="rollno" name="rollno" value="<%= user.rollno %>" required>
      </div>

      <div class="mb-3">
        <label for="year" class="form-label">Year</label>
        <select class="form-select" id="year" name="year">
          <option value="1" <%= user.year === '1' ? 'selected' : '' %>>1</option>
          <option value="2" <%= user.year === '2' ? 'selected' : '' %>>2</option>
          <option value="3" <%= user.year === '3' ? 'selected' : '' %>>3</option>
          <option value="4" <%= user.year === '4' ? 'selected' : '' %>>4</option>
          <option value="5" <%= user.year === '5' ? 'selected' : '' %>>5</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="branch" class="form-label">Branch</label>
        <select class="form-select" id="branch" name="branch">
          <option value="CSE" <%= user.branch === 'CSE' ? 'selected' : '' %>>Computer Science Engineering</option>
          <option value="CSE-AI" <%= user.branch === 'CSE-AI' ? 'selected' : '' %>>Computer Science Engineering - AI</option>
          <option value="IT" <%= user.branch === 'IT' ? 'selected' : '' %>>Information Technology</option>
          <option value="AIML" <%= user.branch === 'AIML' ? 'selected' : '' %>>Artificial Intelligence and Machine Learning</option>
          <option value="ECE" <%= user.branch === 'ECE' ? 'selected' : '' %>>Electronics and Communication Engineering</option>
          <option value="ECE-AI" <%= user.branch === 'ECE-AI' ? 'selected' : '' %>>Electronics and Communication Engineering - AI</option>
          <option value="MAE" <%= user.branch === 'MAE' ? 'selected' : '' %>>Mechanical and Automation Engineering</option>
          <option value="DMAM" <%= user.branch === 'DMAM' ? 'selected' : '' %>>Design, Manufacturing and Automation</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="contactno" class="form-label">Contact Number</label>
        <input type="text" class="form-control" id="contactno" name="contactno" value="<%= user.contactno %>" required>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password (Leave blank to keep unchanged)</label>
        <input type="password" class="form-control" id="password" name="password">
      </div>

      <button type="submit" class="btn btn-primary">Save Changes</button>
      <a href="/profile" class="btn btn-secondary ms-2">Cancel</a>
    </form>
  </div>
</section>

<%- include('../partials/footer') %>
