<%- include('../partials/header') %>
<%- include('../partials/navbar') %>
<%- include('../partials/flash') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">New Society Form</h2>
                    <form class="needs-validation" action="/societies" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="societyName" class="form-label">Society Name</label>
                            <input type="text" class="form-control" name="name" id="societyName" placeholder="Name of Society" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a society name.
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="societyImg" class="form-label">Image URL</label>
                            <input type="url" class="form-control" name="img" id="societyImg" placeholder="Image URL of Society" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter an image URL.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="societyType" class="form-label">Type</label>
                            <select class="form-select" name="type" id="societyType" required>
                                <option value="">Select Type</option>
                                <option value="Technical">Technical</option>
                                <option value="Cultural">Cultural</option>
                                <option value="Social">Social</option>
                                <option value="Sports">Sports</option>
                                <option value="Dramatics">Dramatics</option>
                                <option value="Literacy">Literacy</option>
                                <option value="Literacy">Student Chapter</option>
                            </select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please select a type.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="societyDescription" class="form-label">Description</label>
                            <textarea class="form-control" name="description" id="societyDescription" rows="5" placeholder="Description of Society" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a description.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="societyEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" name="email" id="societyEmail" placeholder="Society Email" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter an email.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="societyInstagram" class="form-label">Instagram URL</label>
                            <input type="url" class="form-control" name="instagram" id="societyInstagram" placeholder="Instagram URL">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid URL.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="societyLinkedin" class="form-label">LinkedIn URL</label>
                            <input type="url" class="form-control" name="linkedin" id="societyLinkedin" placeholder="LinkedIn URL">
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid URL.
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Add Society</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
